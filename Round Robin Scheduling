#include <stdio.h>

int main() {
    int n = 3, i, j, tq = 2;
    int bt[] = {5, 4, 2};
    int rem[3], wt[3] = {0}, tat[3] = {0}, time = 0;
    for(i=0;i<n;i++) rem[i] = bt[i];

    while(1) {
        int done = 1;
        for(i=0;i<n;i++) {
            if(rem[i] > 0) {
                done = 0;
                if(rem[i] > tq) {
                    time += tq;
                    rem[i] -= tq;
                } else {
                    time += rem[i];
                    wt[i] = time - bt[i];
                    rem[i] = 0;
                }
            }
        }
        if(done) break;
    }

    for(i=0;i<n;i++)
        tat[i] = bt[i] + wt[i];

    printf("Process\tBT\tWT\tTAT\n");
    float awt=0, atat=0;
    for(i=0;i<n;i++) {
        printf("P%d\t%d\t%d\t%d\n", i+1, bt[i], wt[i], tat[i]);
        awt+=wt[i];
        atat+=tat[i];
    }
    printf("Average WT=%.2f\nAverage TAT=%.2f\n", awt/n, atat/n);
    return 0;
}


sample output:
Process	BT	WT	TAT
P1	5	4	9
P2	4	6	10
P3	2	4	6
Average WT=4.67
Average TAT=8.33
