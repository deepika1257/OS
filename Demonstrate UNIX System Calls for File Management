#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char buf[50];
    fd = open("test.txt", O_CREAT | O_RDWR, 0777);
    write(fd, "Operating System Lab", 20);
    lseek(fd, 0, SEEK_SET);
    read(fd, buf, 20);
    buf[20] = '\0';
    printf("File Content: %s\n", buf);
    close(fd);
    return 0;
}

sample output:
File Content: Operating System Lab
