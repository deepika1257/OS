#include <stdio.h>

int main() {
    int n = 3;
    int bt[] = {6, 8, 7};
    int pr[] = {2, 1, 3}; // smaller = higher priority
    int wt[3], tat[3], i, j, temp;
    float awt = 0, atat = 0;

    // Sort by priority
    for(i=0;i<n-1;i++)
        for(j=i+1;j<n;j++)
            if(pr[j] < pr[i]) {
                temp = pr[i]; pr[i] = pr[j]; pr[j] = temp;
                temp = bt[i]; bt[i] = bt[j]; bt[j] = temp;
            }

    wt[0] = 0;
    for(i=1;i<n;i++)
        wt[i] = wt[i-1] + bt[i-1];
    for(i=0;i<n;i++)
        tat[i] = bt[i] + wt[i];

    printf("Process\tBT\tPR\tWT\tTAT\n");
    for(i=0;i<n;i++) {
        printf("P%d\t%d\t%d\t%d\t%d\n", i+1, bt[i], pr[i], wt[i], tat[i]);
        awt += wt[i];
        atat += tat[i];
    }
    printf("Average WT=%.2f\nAverage TAT=%.2f\n", awt/n, atat/n);
    return 0;
}


sample output:
Process	BT	PR	WT	TAT
P1	8	1	0	8
P2	6	2	8	14
P3	7	3	14	21
Average WT=7.33
Average TAT=14.33
