#include <stdio.h>
#include <string.h>

struct {
    char dname[10], fname[10][10];
    int fcount;
} dir;

int main() {
    int i;
    strcpy(dir.dname, "root");
    dir.fcount = 3;
    strcpy(dir.fname[0], "file1.txt");
    strcpy(dir.fname[1], "file2.txt");
    strcpy(dir.fname[2], "data.txt");

    printf("Directory: %s\n", dir.dname);
    for(i=0;i<dir.fcount;i++)
        printf("File %d: %s\n", i+1, dir.fname[i]);
    return 0;
}


sample output:
Directory: root
File 1: file1.txt
File 2: file2.txt
File 3: data.txt
