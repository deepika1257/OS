#include <stdio.h>

int main() {
    int n = 3;
    int bt[] = {7, 3, 5};
    int wt[3], tat[3], i, j, temp;
    float awt = 0, atat = 0;

    // Sort burst times
    for(i=0;i<n-1;i++)
        for(j=i+1;j<n;j++)
            if(bt[i] > bt[j]) {
                temp = bt[i];
                bt[i] = bt[j];
                bt[j] = temp;
            }

    wt[0] = 0;
    for(i=1;i<n;i++)
        wt[i] = wt[i-1] + bt[i-1];

    for(i=0;i<n;i++)
        tat[i] = bt[i] + wt[i];

    printf("Process\tBT\tWT\tTAT\n");
    for(i=0;i<n;i++) {
        printf("P%d\t%d\t%d\t%d\n", i+1, bt[i], wt[i], tat[i]);
        awt += wt[i];
        atat += tat[i];
    }
    printf("Average WT=%.2f\nAverage TAT=%.2f\n", awt/n, atat/n);
    return 0;
}


sample output:
Process	BT	WT	TAT
P1	3	0	3
P2	5	3	8
P3	7	8	15
Average WT=3.67
Average TAT=8.67
