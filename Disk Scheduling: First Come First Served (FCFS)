#include <stdio.h>
#include <stdlib.h

int main() {
    int req[] = {82, 170, 43, 140, 24, 16, 190};
    int n = 7, head = 50, seek = 0;

    for(int i=0;i<n;i++) {
        seek += abs(req[i] - head);
        head = req[i];
    }

    printf("Total Seek Time = %d\n", seek);
    printf("Average Seek Time = %.2f\n", (float)seek/n);
    return 0;
}


sample output:
Total Seek Time = 642
Average Seek Time = 91.71
