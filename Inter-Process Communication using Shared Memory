#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <string.h>

int main() {
    key_t key = 1234;
    int shmid = shmget(key, 1024, 0666 | IPC_CREAT);
    char *str = (char*) shmat(shmid, (void*)0, 0);

    strcpy(str, "Hello from Shared Memory!");
    printf("Data written: %s\n", str);

    shmdt(str);
    return 0;
}


sample output:
Data written: Hello from Shared Memory!
