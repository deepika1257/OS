#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp;
    char word[] = "OS";
    char line[100];

    fp = fopen("sample.txt", "r");
    if (fp == NULL) {
        printf("File not found!\n");
        return 0;
    }

    printf("Lines containing '%s':\n", word);
    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, word))
            printf("%s", line);
    }
    fclose(fp);
    return 0;
}


sample output:
Welcome to OS lab
We study OS concepts
This line has nothing
