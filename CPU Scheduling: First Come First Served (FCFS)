#include <stdio.h>

int main() {
    int n = 3;
    int bt[] = {5, 9, 6}; // burst times
    int wt[3], tat[3], i;
    float awt = 0, atat = 0;

    wt[0] = 0;
    for(i=1;i<n;i++)
        wt[i] = wt[i-1] + bt[i-1];

    for(i=0;i<n;i++)
        tat[i] = bt[i] + wt[i];

    printf("Process\tBT\tWT\tTAT\n");
    for(i=0;i<n;i++) {
        printf("P%d\t%d\t%d\t%d\n", i+1, bt[i], wt[i], tat[i]);
        awt += wt[i];
        atat += tat[i];
    }

    printf("Average WT=%.2f\nAverage TAT=%.2f\n", awt/n, atat/n);
    return 0;
}

sample output:
Process	BT	WT	TAT
P1	5	0	5
P2	9	5	14
P3	6	14	20
Average WT=6.33
Average TAT=13.00
